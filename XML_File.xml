<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"
    tools:context=".Calculator">
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TableRow >
            <TextView
android:id="@+id/e"
                style="@style/Design"
                android:background="@color/teal_200"
android:text="e"
                />
            <TextView
android:id="@+id/log"
                style="@style/Design"
                android:background="@color/teal_200"
                android:text="log"
                />

            <ImageView
                android:id="@+id/clear"
                android:src="@drawable/ic_baseline_backspace_24"
                style="@style/Design"
                android:background="@color/teal_200"

                />
            <TextView
                android:id="@+id/subtract"
                style="@style/Design"
                android:background="@color/teal_200"
                android:text="-"
                />
        </TableRow>
        <TableRow
            >


            <TextView
                android:id="@+id/decimal"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="."
                style="@style/Design"
                android:background="@color/teal_200"
                />
            <TextView
                android:id="@+id/nine"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="9"
                style="@style/Design"
                android:background="@color/teal_200"
                />
            <TextView
                android:background="@color/teal_200"
                android:id="@+id/ac"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="AC"
                style="@style/Design"
                />
            <TextView
                android:id="@+id/add"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="+"
                style="@style/Design"
                android:background="@color/teal_200"
                />
        </TableRow>
        <TableRow>



            <TextView
                android:id="@+id/eight"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="8"
                style="@style/Design"
                />

            <TextView
                android:id="@+id/seven"
                style="@style/Design"
                android:text="7"
                />
            <TextView
                android:id="@+id/six"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="6"
                style="@style/Design"

                />

            <TextView
                android:id="@+id/product"
                style="@style/Design"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="*" />









        </TableRow>
        <TableRow>



            <TextView
                android:id="@+id/five"

                android:text="5"
                style="@style/Design"

                />
            <TextView
                android:id="@+id/four"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="4"
                style="@style/Design"
                />
            <TextView
                android:id="@+id/three"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="3"
                style="@style/Design"
                />
            <TextView
                android:background="@color/teal_200"
                android:id="@+id/divide"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="/"
                style="@style/Design"
                />









        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/zero"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="0"
                style="@style/Design"
                />
            <TextView
                android:id="@+id/one"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="1"
                style="@style/Design"
                />
            <TextView
                android:id="@+id/two"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="2"
                style="@style/Design"

                />
            <TextView
                android:id="@+id/equals"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="="
                style="@style/Design"
                android:background="@color/teal_200"/>









        </TableRow>






    </TableLayout>

<TextView
    android:id="@+id/expression"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/table"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="50dp"
    android:background="@color/white"
    android:textSize="32sp"
    android:paddingEnd="10dp"
/>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/expression"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_marginBottom="60dp"
        android:textSize="32sp"
android:paddingEnd="10dp"


/>






</android.support.constraint.ConstraintLayout>
